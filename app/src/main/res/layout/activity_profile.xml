<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgTonyStark"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="20dp"
        android:src="@drawable/tony_stark_new" />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/imgTonyStark"
        android:text="Tony Stark"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtName"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/imgTonyStark"
        android:text="tonystark@marvel.com"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtPhNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtEmail"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/imgTonyStark"
        android:text="+11 1117770000"
        android:textColor="#000000"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="More Information"
        android:textStyle="bold"
        android:layout_below="@id/imgTonyStark"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Exit the App"
        android:textSize="18sp"
        android:background="#ff1744"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>